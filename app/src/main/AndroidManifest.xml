<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mediapipemultihandstrackingapp">

    <uses-sdk android:targetSdkVersion="27" />
    <!-- For using the camera -->

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.write_external_storage" />




    <!-- 디렉토리 파일 읽고/쓰기 권한-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- For MediaPipe -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:roundIcon="@drawable/main_icon"
        android:theme="@style/AppTheme.NoActionBar"
        >
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MediaPlayActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".SettingActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".MyMusicActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".help.HelpActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".help.HelpActivity2"
            android:screenOrientation="landscape"/>
        <activity android:name=".help.HelpActivity3"
            android:screenOrientation="landscape"/>
        <activity android:name=".help.HelpActivity4"
            android:screenOrientation="landscape"/>
        <activity android:name=".help.HelpActivity5"
            android:screenOrientation="landscape"/>
        <activity android:name=".RecordAtivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".DeveloperActivity"
            android:screenOrientation="landscape"
            android:usesCleartextTraffic="true"/>

    </application>
</manifest>