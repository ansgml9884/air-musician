<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_backgrond">

    <TextView
        android:id="@+id/settingTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 악기 연주하기"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        style="@style/title"/>

    <ImageView
        android:id="@+id/up_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/transColorMainBtn"
        />

    <ImageButton
        android:id="@+id/home_img_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/home_btn_customise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        />

    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/settingTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/left_arrow_customise"
        android:layout_marginLeft="20dp"
        />


    <ImageView
        android:id="@+id/square1"
        android:layout_width="365dp"
        android:layout_height="200dp"
        android:layout_marginTop="104dp"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintLeft_toRightOf="@id/leftBtn"
        app:layout_constraintRight_toLeftOf="@id/rightBtn"
        app:layout_constraintTop_toBottomOf="@id/up_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/square1"
        style="@style/setting_play"
        android:layout_marginTop="20dp"
        android:text="왼손 : 코드"

        />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/rightBtn"
        app:layout_constraintTop_toTopOf="@id/square1"
        style="@style/setting_play"
        android:text="오른손 : 스트로크"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        />


    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/right_arrow_customise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/settingTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>